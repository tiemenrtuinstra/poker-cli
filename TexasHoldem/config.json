{
  "game": {
    "defaultHumanPlayers": 1,
    "defaultAiPlayers": 5,
    "defaultStartingChips": 10000,
    "defaultSmallBlind": 50,
    "defaultBigBlind": 100,
    "defaultAnte": 0,
    "enableLogging": true,
    "useColors": true,
    "enableAsciiArt": true,
    "useUnicodeSymbols": true
  },
  "tournament": {
    "enableBlindIncrease": false,
    "blindIncreaseInterval": 10,
    "blindIncreaseMultiplier": 1.5,
    "maxHands": 0
  },
  "ai": {
    "thinkingDelayMin": 500,
    "thinkingDelayMax": 2000,
    "enablePokerTalk": true,
    "pokerTalkFrequency": 0.2,

    "// NOTE": "API keys should be stored in .env file, not here!",
    "// See .env.example for the format": "",

    "// Which providers to use (None, Claude, Gemini, OpenAI)": "",
    "// Players are distributed among enabled providers": "",
    "enabledProviders": ["Claude", "Gemini", "OpenAI"],

    "// Model names (can also be set via env vars)": "",
    "claudeModel": "claude-sonnet-4-20250514",
    "geminiModel": "gemini-2.0-flash",
    "openAiModel": "gpt-4o-mini",

    "// Legacy: API keys here as fallback (prefer .env file!)": "",
    "claudeApiKey": "",
    "geminiApiKey": "",
    "openAiApiKey": ""
  },
  "display": {
    "animationSpeed": 1.0,
    "showHandRankings": true,
    "clearScreenBetweenHands": false
  },
  "logging": {
    "logDirectory": "logs",
    "enableHandHistory": true,
    "enableActionLogging": true,
    "logLevel": "Info"
  },
  "playerNames": {
    "defaultHumanNames": ["Player 1", "Player 2", "Player 3"],
    "useFunnyAiNames": true,
    "customAiNames": []
  },
  "updates": {
    "checkForUpdatesOnStartup": true
  }
}
